                <control type="button" id="3" description="Bkgd Settings">
                    <width>840</width>
                    <align>left</align>
                    <label>$LOCALIZE[31095]</label>
                    <texturenofocus border="8" colordiffuse="$VAR[bannercolor]">images/White.png</texturenofocus>
                    <onclick>ActivateWindow(1706)</onclick>
                </control>
                <control type="radiobutton" id="4" description="Fanart">				
                    <width>840</width>
                    <align>left</align>
                    <label>$LOCALIZE[31075]</label>
                    <texturenofocus border="8" colordiffuse="$VAR[bannercolor]">images/White.png</texturenofocus>
                    <onclick>Skin.ToggleSetting(FanArt)</onclick>
                    <selected>!Skin.HasSetting(FanArt)</selected>
                </control>
                <control type="radiobutton" id="5" description="Shelf Fanart">				
                    <width>840</width>
                    <align>left</align>
                    <label>$LOCALIZE[31094]</label>
                    <texturenofocus border="8" colordiffuse="$VAR[bannercolor]">images/White.png</texturenofocus>
                    <onclick>Skin.ToggleSetting(ShelfFanart)</onclick>
                    <selected>!Skin.HasSetting(ShelfFanart)</selected>
                </control>
                <control type="radiobutton" id="6" description="Fanart for Episodes">
                    <width>840</width>
                    <align>left</align>
                    <label>$LOCALIZE[31045]</label>
                    <texturenofocus border="8" colordiffuse="$VAR[bannercolor]">images/White.png</texturenofocus>
                    <onclick>Skin.ToggleSetting(epthumb)</onclick>
                    <selected>Skin.HasSetting(epthumb)</selected>
                </control>
                <control type="radiobutton" id="7" description="Clock">
                    <width>840</width>
                    <align>left</align>
                    <label>31017</label>
                    <texturenofocus border="8" colordiffuse="$VAR[bannercolor]">images/White.png</texturenofocus>
                    <onclick>Skin.ToggleSetting(clock)</onclick>
                    <selected>!Skin.HasSetting(clock)</selected>
                </control>
                <control type="button" id="8" description="Theme">
                    <width>840</width>
                    <align>left</align>
                    <label>$LOCALIZE[15111]:    $INFO[Skin.CurrentTheme]</label>
                    <texturenofocus border="9" colordiffuse="$VAR[bannercolor]">images/White.png</texturenofocus>
                    <onclick>Skin.Theme(1)</onclick>
                </control>
                <control type="button" id="9" description="Reset SkinSettings">
                    <width>840</width>
                    <align>left</align>
                    <label>$LOCALIZE[31036]</label>
                    <texturenofocus border="8" colordiffuse="$VAR[bannercolor]">images/White.png</texturenofocus>
                    <onclick>Skin.ResetSettings</onclick>
                    <onclick>RunScript(script.skinshortcuts,type=resetall)</onclick>
                    <onclick>XBMC.ReloadSkin()</onclick>
                </control>
                <control type="button" id="10" description="Debug">
